<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/activity_horizontal_padding"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/small_avatar_dimen"
        android:layout_height="@dimen/small_avatar_dimen"
        android:src="@drawable/ic_user"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorDivider"/>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/user_avatar"
        app:layout_constraintBottom_toBottomOf="@id/user_avatar"
        app:layout_constraintLeft_toRightOf="@id/user_avatar">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Organiser Name"
            android:id="@+id/organiser_name"
            android:textSize="18sp"
            android:textColor="#000"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/organiser_type"
            android:text="student"/>
    </LinearLayout>
</LinearLayout>