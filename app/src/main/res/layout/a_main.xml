<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_gravity="center"
        android:background="@drawable/gradient"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nav_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/opaque"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>
    <FrameLayout
        android:id="@+id/container_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@+id/linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_title"
       >
    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_title"
        app:layout_constraintVertical_bias="0.945"
        app:srcCompat="@drawable/ic_add_black_24dp" />


<!-- Bottom Navigation-->
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/opaque"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.v7.widget.CardView
            android:id="@+id/c_me"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="navClicked"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">
        <CheckBox
            android:id="@+id/nav_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/toggle_select"
            android:button="@android:color/transparent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:onClick="navClicked"
            android:layout_gravity="center"
            android:background="@drawable/ic_user"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/c_event"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="navClicked"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">
        <CheckBox
            android:id="@+id/nav_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/toggle_select"
            android:button="@android:color/transparent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:onClick="navClicked"
            android:layout_gravity="center"
            android:background="@drawable/ic_ticket"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/c_notify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="navClicked"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">
        <CheckBox
            android:id="@+id/nav_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/toggle_select"
            android:button="@android:color/transparent"
            android:layout_marginStart="30dp"
            android:layout_gravity="center"
            android:onClick="navClicked"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_notification"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/c_sett"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="navClicked"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">
        <CheckBox
            android:id="@+id/nav_sett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/toggle_select"
            android:button="@android:color/transparent"
            android:layout_marginStart="20dp"
            android:onClick="navClicked"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_settings"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>